---
import { Icon } from "astro-icon/components";

const { icon, url } = Astro.props;

const linkClasses = [
  // Base styling
  "group block rounded-full p-3 ring-2 transition-colors",
  
  // DaisyUI semantic colors
  "bg-base-100 ring-base-300",
  "hover:bg-base-200 hover:ring-base-content/20"
].join(" ");

const iconClasses = [
  // Base styling  
  "size-6 transition-colors",
  
  // DaisyUI semantic colors
  "text-base-content/70",
  "group-hover:text-base-content"
].join(" ");
---

<li>
  <a
    href={url}
    aria-label={icon}
    class={linkClasses}
  >
    <Icon
      name={icon}
      class={iconClasses}
    />
  </a>
</li>
