---
import { Icon } from "astro-icon/components";

const { icon, url } = Astro.props;

const linkClasses = [
  // Base
  "group block rounded-full",
  "p-3 ring-2 transition-colors",
  
  // Light mode
  "bg-lightModeIconLinkBackground",
  "ring-lightModeIconLinkOutline",
  
  // Hover
  "hover:bg-lightModeIconLinkBackgroundHover",
  "hover:ring-lightModeIconLinkOutlineHover",
  
  // Dark mode
  "dark:bg-darkModeIconLinkBackground",
  "dark:ring-darkModeIconLinkOutline",
  
  // Dark Hover
  "dark:hover:bg-darkModeIconLinkBackgroundHover",
  "dark:hover:ring-darkModeIconLinkOutlineHover"
].join(" ");

const iconClasses = [
  // Base
  "size-6 transition-colors",
  
  // Light mode
  "text-lightModeIconLinkText",
  
  // Hover
  "group-hover:text-lightModeIconLinkTextHover",
  
  // Dark mode
  "dark:text-darkModeIconLinkText",
  
  // Dark Hover
  "group-hover:dark:text-darkModeIconLinkTextHover"
].join(" ");
---

<li>
  <a
    href={url}
    aria-label={icon}
    class={linkClasses}
  >
    <Icon
      name={icon}
      class={iconClasses}
    />
  </a>
</li>
