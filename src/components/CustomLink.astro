---
import { Icon } from "astro-icon/components";
const { link } = Astro.props;

const linkClasses = [
  // Base styling
  "flex items-center gap-2 rounded-full px-6 py-3 text-lg transition-colors ring-2",
  
  // DaisyUI semantic colors
  "bg-base-100 text-base-content ring-base-300",
  "hover:bg-base-200 hover:ring-base-content/20"
].join(" ");

const iconClasses = [
  // Base styling
  "size-6 transition-colors",
  
  // DaisyUI semantic colors  
  "text-base-content/70"
].join(" ");
---

<li>
  <a
    href={link.url}
    class={linkClasses}
  >
    <div class="flex items-center justify-between w-full">
      <Icon
        name={link.icon ?? "link"}
        class={iconClasses}
      />
      <div class="flex-1 text-center">
        <p class="font-semibold">
          {link.title}
        </p>
        {link.description ? (
          <p class="text-sm text-base-content/60">
            {link.description}
          </p>
        ) : null}
      </div>
      <Icon
        name={"lucide:chevron-right"}
        class={iconClasses}
      />
    </div>
  </a>
</li>
