---
import { formatDate } from "@/lib/util";

const { post } = Astro.props;
---

<li class="overflow-hidden rounded-lg shadow-md bg-white dark:bg-darkModeBackground hover:bg-lightModeIconLinkBackgroundHover dark:hover:bg-darkModeIconLinkBackgroundHover ring-2 ring-lightModeIconLinkOutline dark:ring-darkModeIconLinkOutline hover:ring-lightModeIconLinkOutlineHover dark:hover:ring-darkModeIconLinkOutlineHover transition-colors">
  <a href={`/blog/${post.slug}`} class="block">
    {post.data.image ? (
      <img src={post.data.image.src} alt={post.data.imageAlt ?? post.data.title} class="w-full h-48 object-cover" />
    ) : (
      <div class="w-full h-48 bg-gradient-to-br from-cardFrom to-cardTo dark:from-darkCardFrom dark:to-darkCardTo"></div>
    )}
    <div class="p-4">
      <h2 class="text-xl font-semibold text-lightModeForeground dark:text-darkModeForeground">{post.data.title}</h2>
      <p class="mt-2 text-lightModeForegroundMuted dark:text-darkModeForegroundMuted">{post.data.description}</p>
      <time class="mt-4 block text-sm text-lightModeForegroundMuted dark:text-darkModeForegroundMuted">{formatDate(post.data.publicationDate)}</time>
    </div>
  </a>
</li>
