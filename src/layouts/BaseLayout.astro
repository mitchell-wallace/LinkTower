---
import "@/styles/global.css";

import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";

const bodyClasses = [
  // Base
  "mx-auto min-h-screen max-w-screen-sm p-3 font-sans sm:p-6",
  "bg-fixed bg-gradient-to-b",
  
  // Light mode
  "from-lightModeBackgroundFrom to-lightModeBackgroundTo",
  
  // Dark mode
  "dark:from-darkModeBackgroundFrom dark:to-darkModeBackgroundTo"
].join(" ");
---

<html lang="en">
  <BaseHead>
    <slot name="head" />
  </BaseHead>
  <body class={bodyClasses}>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
