---
import "@/styles/global.css";

import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/components/Footer.astro";
---

<html lang="en">
  <BaseHead>
    <slot name="head" />
  </BaseHead>
  <body class="mx-auto min-h-screen max-w-screen-sm p-3 font-sans sm:p-6 bg-gradient-to-b from-lightModeBackgroundFrom to-lightModeBackgroundTo dark:from-darkModeBackgroundFrom dark:to-darkModeBackgroundTo bg-fixed">
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
